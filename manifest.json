{
  "manifest_version": 3,
  "name": "Match.com AI Reply Assistant",
  "version": "2.0.0",
  "description": "AI-assisted reply generator for Match.com conversations with Auto Mode",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.match.com/*",
    "https://*.ngrok-free.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.match.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
